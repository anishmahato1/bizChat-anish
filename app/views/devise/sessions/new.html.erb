<div class="box-container signin-box-container">
  <div class="form-container">
    <h1 class="logo"><span class="logo-first">biz</span>Chat</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="form-title">Login to your account</h2>
      <p class="form-info">Welcome back! Please login to your account.</p>
      
      <%= render partial: "devise/shared/notice_alert" %>
            
      <%= render "devise/shared/email_field", f: f %>
      <br>  
      <%= f.label :password, "Password" , class: "label-text" %>
      <div class="left-inner-addon ">
        <i class="fa-solid fa-lock"></i>
        <%= f.password_field :password, placeholder: "Enter your password", minlength: 6, required: true %>
      </div>

      <%= link_to "Forget password ?" , new_user_password_path, class: "text-red"%><br><br>

      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      <%= f.submit "Login" %>
    <% end %>

      <p>
        <small>Not registered yet ? </small>
        <%= link_to "Create new account" , new_user_registration_path, class: "text-red" %><br>
      </p>
      
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"text-red" %><br>
  </div>
</div>