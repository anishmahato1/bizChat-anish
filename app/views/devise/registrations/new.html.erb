<div class="box-container">
  <div class="form-container">
    <h1 class="logo"><span class="logo-first">biz</span>Chat</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="form-title">Let's get started</h2>
      <p class="form-info">Create an account to get started</p>
        
      <%= render partial: "devise/shared/notice_alert" %>
  
      <div class="field">
        <%= f.label :name, class: "label-text" %>
        <div class="left-inner-addon">
          <i class="fa-solid fa-user"></i>
          <%= f.text_field :name, placeholder: "Enter your name", pattern: "[a-zA-Z ]+", title: "Only allows letters and space", autofocus: true, required: true%>
        </div>
        <%= render "devise/shared/error_messages", field: :name %>
      </div>
  
      <div class="field">
        <%= f.label :gender, class: "label-text" %><br>

        <%= f.radio_button :gender, :male, checked: true %>
        <%= f.label :gender_male, "Male", class: "radio-label-text" %>
        <%= f.radio_button :gender, :female%>
        <%= f.label :gender_female, "Female",  class: "radio-label-text" %>
        <%= f.radio_button :gender, :other%>
        <%= f.label :gender_other, "Other",  class: "radio-label-text"%><br>

        <%= render "devise/shared/error_messages", field: :gender %>
      </div>
  
      <%= render "devise/shared/email_field", f: f %>
      <%= render "devise/shared/error_messages", field: :email %>

      <%= render "devise/shared/password_field", f: f, label: "Password" %>

      <%= f.submit "Sign Up" %>
    <% end %>
    <p class="text-center">
      <small>Already have an account? </small>
      <%= link_to "Login", new_user_session_path, class: "text-red" %>
    </p>
  </div>
  <div class="image-container">
    <%= image_tag("rocket.png", alt: "image not found", class: "vertical-center") %>
  </div>
</div>
  